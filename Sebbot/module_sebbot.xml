<?xml version="1.0" encoding="UTF-8"?>
<project name="module_sebbot" default="compile.module.sebbot">
  <dirname property="module.sebbot.basedir" file="${ant.file.module_sebbot}"/>
  
  <property name="module.jdk.home.sebbot" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.sebbot" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.sebbot" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.sebbot" value="-encoding windows-1252 -source 8 ${compiler.args}"/>
  
  <property name="sebbot.output.dir" value="${module.sebbot.basedir}/bin"/>
  <property name="sebbot.testoutput.dir" value="${module.sebbot.basedir}/bin"/>
  
  <path id="sebbot.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="sebbot.module.production.classpath">
    <path refid="${module.jdk.classpath.sebbot}"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${idea.home}/lib/hamcrest-library-1.3.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.11.jar"/>
    <pathelement location="${basedir}/Sebbot/Trilateration-master/lib/commons-math3-3.5.jar"/>
    <path refid="library.commons-math3-3.5.classpath"/>
    <pathelement location="${trilateration.output.dir}"/>
    <path refid="library.gradle:_org.apache.commons:commons-math3:3.5.classpath"/>
  </path>
  
  <path id="sebbot.runtime.production.module.classpath">
    <pathelement location="${sebbot.output.dir}"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${idea.home}/lib/hamcrest-library-1.3.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.11.jar"/>
    <pathelement location="${basedir}/Sebbot/Trilateration-master/lib/commons-math3-3.5.jar"/>
    <path refid="library.commons-math3-3.5.classpath"/>
    <pathelement location="${trilateration.output.dir}"/>
    <path refid="library.gradle:_org.apache.commons:commons-math3:3.5.classpath"/>
  </path>
  
  <path id="sebbot.module.classpath">
    <pathelement location="${sebbot.output.dir}"/>
    <path refid="${module.jdk.classpath.sebbot}"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${idea.home}/lib/hamcrest-library-1.3.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.11.jar"/>
    <pathelement location="${basedir}/Sebbot/Trilateration-master/lib/commons-math3-3.5.jar"/>
    <path refid="library.commons-math3-3.5.classpath"/>
    <pathelement location="${trilateration.testoutput.dir}"/>
    <pathelement location="${trilateration.output.dir}"/>
    <path refid="library.gradle:_org.apache.commons:commons-math3:3.5.classpath"/>
    <path refid="library.gradle:_junit:junit:4.12.classpath"/>
    <path refid="library.gradle:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  <path id="sebbot.runtime.module.classpath">
    <pathelement location="${sebbot.output.dir}"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${idea.home}/lib/hamcrest-library-1.3.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.11.jar"/>
    <pathelement location="${basedir}/Sebbot/Trilateration-master/lib/commons-math3-3.5.jar"/>
    <path refid="library.commons-math3-3.5.classpath"/>
    <pathelement location="${trilateration.testoutput.dir}"/>
    <pathelement location="${trilateration.output.dir}"/>
    <path refid="library.gradle:_org.apache.commons:commons-math3:3.5.classpath"/>
    <path refid="library.gradle:_junit:junit:4.12.classpath"/>
    <path refid="library.gradle:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.sebbot">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.sebbot">
    <patternset refid="excluded.from.module.sebbot"/>
  </patternset>
  
  <path id="sebbot.module.sourcepath">
    <dirset dir="${module.sebbot.basedir}">
      <include name="src"/>
      <include name="resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.sebbot" depends="compile.module.sebbot.production,compile.module.sebbot.tests" description="Compile module Sebbot"/>
  
  <target name="compile.module.sebbot.production" depends="register.custom.compilers,compile.module.trilateration" description="Compile module Sebbot; production classes">
    <mkdir dir="${sebbot.output.dir}"/>
    <javac2 destdir="${sebbot.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.sebbot}/javac">
      <compilerarg line="${compiler.args.sebbot}"/>
      <bootclasspath refid="sebbot.module.bootclasspath"/>
      <classpath refid="sebbot.module.production.classpath"/>
      <src refid="sebbot.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.sebbot"/>
    </javac2>
    
    <copy todir="${sebbot.output.dir}">
      <fileset dir="${module.sebbot.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.sebbot.basedir}/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.sebbot.tests" depends="register.custom.compilers,compile.module.sebbot.production" description="compile module Sebbot; test classes" unless="skip.tests"/>
  
  <target name="clean.module.sebbot" description="cleanup module">
    <delete dir="${sebbot.output.dir}"/>
    <delete dir="${sebbot.testoutput.dir}"/>
  </target>
</project>